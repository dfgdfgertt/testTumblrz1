<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css">
    <title>Document</title>
</head>

<body style="background-image: url(images/background.png);">
    <div id="page-content-wrapper">
        <div class="container"
            style="margin-top: 80px; width: 50%; background-color:#fff;box-shadow: 0 0 5px 0 rgba(0,0,0,0.3);; border-radius: 10px;">
            <h3 style="padding-top: 20px;">Thông tin người dùng</h3>
            <form action="/themuser" method="POST">
                <div class="form-group">
                    <label for="lastName"> Họ</label>
                    <input type="text" class="form-control" id="lastName" placeholder="HỌ" name="ho">
                </div>
                <div class="form-group">
                    <label for="lastName"> Tên</label>
                    <input type="text" class="form-control" id="lastName" placeholder="Tên" name="ten">
                </div>
                <div class="form-row">
                    <div class="form-group col-sm-6">
                        <label for="email">Email</label>
                        <input type="email" name="email" class="form-control" id="email" placeholder="email"
                            value=<%= mail %>>
                    </div>
                    <div class="form-group col-sm-6">
                        <label for="phone">Điện thoại</label>
                        <input type="text" class="form-control" id="myAddress" placeholder="Số điện thoại" name="SDT">
                    </div>
                </div>
                <div class="form-group">
                    <label for="pass">Mật khẩu mới</label>
                    <input type="password" class="form-control" id="pass" placeholder="Mật khẩu" name="matkhau">
                </div>
                <div class="form-row">
                    <div class="form-group col-sm-4">
                        <label for="ngaySinh">Ngày sinh</label>
                        <input type="date" class="form-control" id="ngaySinh" name="ngaysinh">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-sm-4">
                        <label for="gioiTinh">Giới tính</label> <br>
                        <input type="radio" value="Nam" id="gioitinh" name="gioitinh">
                        <label>Nam</label> <br>
                        <input type="radio" value="Nữ" id="gioitinh" name="gioitinh">
                        <label>Nữ</label><br>
                        <input type="radio" value="Khác" id="gioitinh" name="gioitinh">
                        <label>Khác</label>

                    </div>
                </div>
                
                <button style="margin-bottom: 10px;" type="submit" class="btn btn-primary">Lưu</button>
            </form>
            <form action="/" method="GET">
                <button style="margin-bottom: 10px;" type="submit" class="btn btn-primary">Thoát</button>
            </form>

        </div>
        <script language="javascript">
            document.getElementById("save").onclick = function () {
                var checkbox = document.getElementsByName("gioitinh");
                for (var i = 0; i < checkbox.length; i++) {
                    if (checkbox[i].checked === true) {
                        alert(checkbox[i].value);
                    }
                }
            };
        </script>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
</body>

</html>