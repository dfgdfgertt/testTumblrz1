<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css">

    <title>Document</title>
</head>

<body style="background-image: url(images/background.png);">
    <div id="wrapper" class="toggled">
        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <h2 style="color: #000; padding-top: 10px; ">Tumblrz</h2>
                </li>
                <li>
                    <a href="/danhsachnguoidung">Danh sách</a>
                </li>
                <li>
                    <a href="add-User">Thêm người dùng</a>
                </li>
                <li>
                    <a href="/">Đăng xuất</a>
                </li>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container"
                style="margin-top: 100px; width: 50%; background-color:#fff; border-radius: 10px; box-shadow: 0 0 5px 0 rgba(0,0,0,0.3);">
                <h3>Thêm người dùng</h3>
                <form action="/themuser" method="POST" enctype="multipart/form-data">
                    <div class="form-row">

                    </div>
                    <div class="form-row">
                        <div class="form-group col-sm-6">
                            <label for="firstName">Họ</label>
                            <input type="text" class="form-control" id="ho" placeholder="Họ" name='ho'>
                        </div>
                        <div class="form-group col-sm-6">
                            <label for="firstName">Tên</label>
                            <input type="text" class="form-control" id="ten" placeholder="Tên" name='ten'>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-sm-6">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" id="email" placeholder="Email" name='email'>
                        </div>
                        <div class="form-group col-sm-6">
                            <label for="phone">Điện thoại</label>
                            <input type="text" class="form-control" id="SDT" placeholder="Số điện thoại" name='SDT'>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-sm-6">
                            <label for="pass">Mật khẩu</label>
                            <input type="password" class="form-control" id="matkhau" placeholder="Password"
                                name='matkhau'>
                        </div>
                        <div class="form-group col-sm-6">
                            <label for="ngaySinh">Ngày sinh</label>
                            <input type="date" class="form-control" id="ngaysinh" name='ngaysinh'>
                        </div>
                        <div class="form-group col-sm-6">
                            <label for="gioiTinh">Giới tính</label> <br>
                            <input type="radio" value="Nam" id="gioitinh" name="gioitinh">
                            <label>Nam</label> &nbsp; &nbsp;
                            <input type="radio" value="Nữ" id="gioitinh" name="gioitinh">
                            <label>Nữ</label> &nbsp; &nbsp;
                            <input type="radio" value="Khác" id="gioitinh" name="gioitinh">
                            <label>Khác</label>
                        </div>
                        <div class="form-group">
                            <label for="">Avatar</label>
                            <input type="file" name="avatarNew" class="form-control-file" id="exampleFormControlFile1">
                        </div>
                        <button id="save" style="margin-bottom: 10px; margin-left: 550px;" type="submit"
                            class="btn btn-primary">Lưu</button>
                    </div>
                </form>
            </div>
            <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- Menu Toggle Script -->
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
    <script language="javascript">
        document.getElementById("save").onclick = function () {
            var checkbox = document.getElementsByName("gioitinh");
            for (var i = 0; i < checkbox.length; i++) {
                if (checkbox[i].checked === true) {
                    alert(checkbox[i].value);
                }
            }
        };
    </script>
</body>

</html>