<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh sách người dùng</title>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.js"></script>
    <script>
        $(document).ready(function() {
            document.title = 'Danh sách người dùng';
            $('#example').DataTable({
                "dom": '<"dt-buttons"Bf><"clear">lirtp',
                "paging": true,
                "autoWidth": true,
                "buttons": [
                    'colvis',
                    'copyHtml5',
                    'csvHtml5',
                    'excelHtml5',
                    'pdfHtml5',
                    'print'
                ]
            });
        });
    </script>
</head>

<body style="background-image: url(images/background.png);">
    <div id="wrapper" class="toggled">
        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <h2 style="color: #000; padding-top: 10px;">Tumblrz</h2>
                </li>
                <li>
                    <a href="/danhsachnguoidung">Danh sách</a>
                </li>
                <li>
                    <a href="add-User">Thêm người dùng</a>
                </li>
                <li>
                    <a href="/">Đăng xuất</a>
                </li>

            </ul>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container" style="margin-top: 100px; background-color:#fff;border-radius: 10px;box-shadow: 0 0 5px 0 rgba(0,0,0,0.3);">
                <h1 style="padding-top: 10px;">Thông tin người dùng</h1>
                <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead class="thead-dark">
                        <tr>
                            <th>Avatar</th>
                            <th>Họ</th>
                            <th>Tên</th>
                            <th>Ngày sinh</th>
                            <th>Giới tính</th>
                            <th>Mail</th>
                            <th>Số điện thoại</th>
                            <!-- <th>Mật khẩu</th> -->
                            <th>Active</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach((entry) => { %>
                            <tr>
                                <td>
                                    <img style="width: 60x; height: 60px;" class="img-thumbnail" src=" <%= entry.avatar %>" alt="">
                                </td>
                                <td>
                                    <%= entry.ho %>
                                </td>
                                <td>
                                    <%= entry.ten %>
                                </td>
                                <th>
                                    <%= entry.ngaysinh %>
                                </th>
                                <th>
                                    <%= entry.gioitinh %>
                                </th>
                                <td>
                                    <%= entry.email %>
                                </td>
                                <td>
                                    <%= entry.SDT %>
                                </td>
                                <!-- <th>
                                    <%= entry.matkhau %>
                                </th> -->
                                <th>

                                </th>
                                <td>
                                    <input class="btn btn-primary" type="button" value="Sửa" onclick="handleUpdateUser('<%= entry.id %>')">
                                    <input class="btn btn-primary" type="button" value="Xóa" onclick="handleDeleteUser('<%= entry.id %>')">
                                </td>
                                <% }) %>
                    </tbody>
                </table>
            </div>

            <!-- /#page-content-wrapper -->

        </div>
        <!-- /#wrapper -->

        <!-- Menu Toggle Script -->
        <script>
            $("#menu-toggle").click(function(e) {
                e.preventDefault();
                $("#wrapper").toggleClass("toggled");
            });
        </script>
        <script>
            function handleDeleteUser(value) {
                $.ajax({
                    url: '/' + value,
                    type: 'DELETE',
                    success: function(result) {
                        $(location).attr('href', '/danhsachnguoidung');
                    }
                })
            }
        </script>
        <script>
            function handleUpdateUser(value) {
                $(location).attr('href', '/updateUser/' + value);
            }
        </script>
</body>

</html>